<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragment.GenerateFragment">

        <ImageView
            android:id="@+id/imv_generate__background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/background_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_generate__edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="48dp"
            android:src="@drawable/pen_edit_1"
            app:layout_constraintEnd_toEndOf="@+id/imv_generate__background"
            app:layout_constraintTop_toTopOf="@+id/imv_generate__background" />

        <ImageView
            android:id="@+id/imv_generate__createQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/imv_history_plus_history"
            app:layout_constraintStart_toStartOf="@+id/imv_generate__background"
            app:layout_constraintTop_toTopOf="@+id/imv_generate__background" />

        <TextView
            android:id="@+id/tv_generate_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/create"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/imv_generate__createQr"
            app:layout_constraintTop_toBottomOf="@+id/imv_generate__createQr" />

        <com.example.qrscaner.view.fonts.TextViewPoppinBold
            android:id="@+id/tv_generate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/qr_code_generator"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tv_generate_create"
            app:layout_constraintTop_toBottomOf="@+id/tv_generate_create" />

        <LinearLayout
            android:id="@+id/nsv_genFragment__gotoGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imv_generate__background"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:hint="@string/generate_text_empty"
                android:maxLines="2"
                android:textSize="17sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_generate_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/corner"
                android:text="@string/create_now"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_generate__create"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nsv_genFragment__gotoGenerate">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.qrscaner.view.fonts.TextViewPoppinBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/qr_code_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_generate__qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp" />

                <com.example.qrscaner.view.fonts.TextViewPoppinBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/bar_code" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_generate__barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.example.qrscaner.view.ViewGenerateQRCode
            android:id="@+id/vgq_generate__createQr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_generate_fragment__history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nsv_genFragment__gotoGenerate" />
    <com.example.qrscaner.view.ShowQrGenerate
        android:id="@+id/rhs_generateFragment_show"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"/>
<com.example.qrscaner.view.SaveQRGenerate
    android:visibility="gone"
    android:id="@+id/save_generateFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
