<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HistoryFragment">

    <com.example.qrscaner.view.ResultHistoryQr
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/rsq_historyFragment__showQr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlt_scanHistory__Upto"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlt_scanHistory__Upto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background_history">

        <ImageView
            android:id="@+id/imv_scan_goto__Scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/imv_history_plus_history" />

        <TextView
            android:id="@+id/tv_history_fragment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv_scan_goto__Scan"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="HISTORY"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_history_fragment_name"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="QR Code Scanner"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imv_history_historyEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:padding="10dp"
            android:src="@drawable/pen_edit_1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_scanHistory_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlt_scanHistory__Upto">

        <LinearLayout
            android:id="@+id/lnl_historyFragment__gotoScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:hint="@string/generate_text_empty"
                android:maxLines="2"
                android:textSize="17sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                app:cardCornerRadius="12dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_historyFragment__gotoScan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3C52F5"
                    android:text="Scan Now!"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_historyFragment__qrScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnl_historyFragment__gotoScan"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />
    </RelativeLayout>


</RelativeLayout>