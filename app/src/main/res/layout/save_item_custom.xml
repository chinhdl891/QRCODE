<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C52F5">

    <LinearLayout
        android:id="@+id/lnl_result_scan_btnOption"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_save_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Cancel"
            android:textColor="#3C52F5" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Save"
            android:textColor="#3C52F5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imv_save_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imv_result_alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/arrow_back" />

    <TextView
        android:id="@+id/tv_save_category"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:text="Result"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_result_alert"
        android:layout_width="288dp"
        android:layout_height="430dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_save_category"
        app:srcCompat="@drawable/background_dialog" />

    <ImageView
        android:id="@+id/imv_save_qr_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/imv_result_alert"
        app:layout_constraintTop_toTopOf="@+id/imv_result_alert"
        app:srcCompat="@drawable/add_email" />

    <TextView
        android:id="@+id/tv_save_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:text="Email"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imv_save_qr_category"
        app:layout_constraintTop_toTopOf="@+id/imv_result_alert" />


    <TextView
        android:id="@+id/tv_save_date_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:text="25th Dec, 2020 "
        app:layout_constraintStart_toEndOf="@+id/imv_save_qr_category"
        app:layout_constraintTop_toTopOf="@+id/imv_result_alert" />

    <ImageView

        android:id="@+id/imv_save_qr_render"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/imv_result_alert"
        app:layout_constraintStart_toStartOf="@+id/imv_result_alert"
        app:layout_constraintTop_toBottomOf="@+id/tv_save_date_create"
        app:layout_constraintVertical_bias="0.75" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_save__selectColor"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_result_alert"
        app:layout_constraintEnd_toEndOf="@+id/imv_result_alert"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="@+id/imv_result_alert" />

    <com.example.qrscaner.view.fonts.TextViewPoppinBold
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="Color"
        app:layout_constraintBottom_toTopOf="@+id/rcv_save__selectColor"
        app:layout_constraintStart_toStartOf="@+id/imv_result_alert" />
</androidx.constraintlayout.widget.ConstraintLayout>