<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C52F5">

    <ImageView
        android:id="@+id/imv_scan_result_history__back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />

    <TextView

        android:id="@+id/tv_result_history__category"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:text="Result"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_result_history_alert"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_history__category"
        app:srcCompat="@drawable/background_dialog" />

    <LinearLayout

        android:layout_width="296dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10.5"
        app:layout_constraintBottom_toBottomOf="@+id/imv_result_history_alert"
        app:layout_constraintEnd_toEndOf="@+id/imv_result_history_alert"
        app:layout_constraintStart_toStartOf="@+id/imv_result_history_alert">

        <TextView

            android:id="@+id/tv_scanResult_optionOne"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@drawable/corner_button_left"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Cancel"
            android:textColor="#3C52F5" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/white" />

        <TextView

            android:id="@+id/tv_scanResult_share"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:background="@drawable/corner_button_right"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Share"
            android:textColor="#3C52F5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imv_result_history_qr__category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/imv_result_history_alert"
        app:layout_constraintTop_toTopOf="@+id/imv_result_history_alert"
        app:srcCompat="@drawable/add_email" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_result_history_qr__categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Email"
        app:layout_constraintStart_toEndOf="@+id/imv_result_history_qr__category"
        app:layout_constraintTop_toTopOf="@+id/imv_result_history_alert" />

    <TextView
        android:id="@+id/tv_result_history_qr__dateCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:text="25th Dec, 2020 "
        app:layout_constraintStart_toEndOf="@+id/imv_result_history_qr__category"
        app:layout_constraintTop_toTopOf="@+id/imv_result_history_alert" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_result_history_qr_render"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:padding="20dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/imv_result_history_alert"
        app:layout_constraintStart_toStartOf="@+id/imv_result_history_alert"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_history_qr__dateCreate">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:id="@+id/lnl_result_history__contentHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>