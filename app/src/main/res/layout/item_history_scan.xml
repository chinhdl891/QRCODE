<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_item_scan_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_call" />

    <com.example.qrscaner.view.fonts.TextViewPoppinBold
        android:id="@+id/tv_item_scan_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="0385154192"
        app:layout_constraintStart_toEndOf="@+id/imv_item_scan_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:paddingBottom="10dp"
        android:id="@+id/tv_item_scan_date_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imv_item_scan_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_scan_content" />

    <ImageView
        android:id="@+id/imv_item_scan_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/tv_item_scan_content"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_item_history" />
</androidx.constraintlayout.widget.ConstraintLayout>