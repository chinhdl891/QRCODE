<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="20dp"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_item_history__date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="50dp"
            android:background="#B4B7CC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_item_history_monthCreate"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_history_create" />

        <com.example.qrscaner.view.fonts.TextViewPoppinBold
            android:id="@+id/tv_item_history_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:text="Created in"
            android:textColor="#061058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_history_monthCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Dec 2020"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_history_create" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_history__scannedContainer"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_below="@+id/csl_item_history__date"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_item_history__scannedBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imv_item_history__scannedType"
                android:layout_width="36dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imv_item_history__scannedCheck"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/add_call" />

            <com.example.qrscaner.view.fonts.TextViewPoppinBold
                android:id="@+id/tv_item_history__scannedContent"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="0385154192"
                app:layout_constraintBottom_toTopOf="@+id/tv_item_history__scannedDate"
                app:layout_constraintStart_toEndOf="@+id/imv_item_history__scannedType"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.qrscaner.view.fonts.TextViewPoppinRegular
                android:id="@+id/tv_item_history__scannedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingBottom="10dp"
                android:text="20,May 2022"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imv_item_history__scannedType"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_history__scannedContent" />

            <ImageView
                android:id="@+id/imv_item_history__scannedMenu"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_menu_item_history" />

            <ImageView
                android:id="@+id/imv_item_history__scannedCheck"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imv_item_history__scannedType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_uncheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_history__editContainer"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_below="@+id/csl_item_history__date"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imv_item_history__editCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E6E7F1"
                android:src="@drawable/ic_cancel" />

            <TextView
                android:id="@+id/txv_item_history__edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Edit"
                android:paddingTop="10dp"
                android:textColor="#3C52F5"
                app:drawableTopCompat="@drawable/ic_edit" />

            <TextView
                android:id="@+id/txv_item_history__editShare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="Share"
                android:textColor="#3C52F5"
                app:drawableTopCompat="@drawable/ic_share" />

            <TextView
                android:id="@+id/txv_item_history__editDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="Delete"
                android:textColor="#EB5757"
                app:drawableTopCompat="@drawable/ic_delete" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>




